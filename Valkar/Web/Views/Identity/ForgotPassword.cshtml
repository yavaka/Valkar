@model ApplicationCore.ServiceModels.Identity.ForgotPasswordServiceModel

<div class="container">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-xs-1 col-sm-6 col-md-6 col-lg-5 col-xl-5 col-xxl-5" id="login-form">
            <div class="shadow p-3 mb-5 bg-body rounded">
                <h1>Reset password</h1>
                <hr />
                @if (TempData["sentEmail"] is not null)
                {
                    <div class="alert alert-success" role="alert">
                        @TempData["sentEmail"].ToString()
                    </div>
                }
                @if (TempData["invalidUser"] is not null)
                {
                    <div class="alert alert-danger" role="alert">
                        @TempData["invalidUser"].ToString()
                    </div>
                }
                <form asp-controller="Identity" asp-action="ForgotPassword" method="post">
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" type="email" class="form-control">
                    </div>
                    <br />
                    <button type="submit" class="btn btn-primary">Send</button>
                </form>
            </div>
        </div>
    </div>
</div>