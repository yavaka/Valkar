@model ApplicationCore.ServiceModels.Identity.RegisterServiceModel

@{
    ViewData["Title"] = "Register";
}

<div class="container-fluid h-100">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-xs-1 col-sm-6 col-md-6 col-xl-4 col-xxl-4" id="register-form">
            <div class="shadow p-3 mb-5 bg-body rounded">
                <div class="d-flex justify-content-center">
                    <h1>Register</h1>
                </div>
                <hr />
                <form asp-controller="Identity" asp-action="Register" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" type="email" class="form-control">
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="UserName"></label>
                        <input asp-for="UserName" type="text" class="form-control">
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" type="password" class="form-control">
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="ConfirmPassword"></label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control">
                    </div>
                    <br />
                    <button type="submit" class="btn btn-primary">Register</button>
                </form>
            </div>
        </div>
    </div>
</div>
