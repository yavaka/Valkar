@* Contact Form *@
<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-7 mb-5">
                <form asp-controller="Home" asp-action="SendContactForm" id="contact-form" class="p-5 bg-white" method="post" enctype="multipart/form-data">
                    <div class="row form-group">
                        @*First Name*@
                        <div class="col-md-6 mb-3 mb-md-0">
                            <label class="text-black" for="fname">First Name</label>
                            <input asp-for="FirstName" type="text" id="fname" class="form-control">
                            <span asp-validation-for="FirstName" id="contact-validation-message" class="text-danger" style="font-size: smaller"></span>
                        </div>
                        @*Last Name*@
                        <div class="col-md-6">
                            <label class="text-black" for="lname">Last Name</label>
                            <input asp-for="LastName" type="text" id="lname" class="form-control">
                            <span asp-validation-for="LastName" id="contact-validation-message" class="text-danger" style="font-size: smaller"></span>
                        </div>
                    </div>

                    <div class="row form-group">
                        @*Email*@
                        <div class="col-md-12">
                            <label class="text-black" for="email">Email</label>
                            <input asp-for="Email" type="email" id="email" class="form-control">
                            <span asp-validation-for="Email" id="contact-validation-message" class="text-danger" style="font-size: smaller"></span>
                        </div>
                    </div>

                    <div class="row form-group">
                        @*Subject*@
                        <div class="col-md-12">
                            <label class="text-black" for="subject">Subject</label>
                            <input asp-for="Subject" type="text" id="subject" class="form-control">
                            <span asp-validation-for="Subject" id="contact-validation-message" class="text-danger" style="font-size: smaller"></span>
                        </div>
                    </div>

                    <div class="row form-group">
                        @*Content*@
                        <div class="col-md-12">
                            <label class="text-black" for="EmailContent">Message</label>
                            <textarea asp-for="EmailContent" id="message" cols="30" rows="7" class="form-control"></textarea>
                            <span asp-validation-for="EmailContent" id="contact-validation-message" class="text-danger" style="font-size: smaller"></span>
                        </div>
                    </div>
                    <input type="hidden" id="captcha-token" asp-for="Token" />
                    <input type="hidden" name="invokedFrom" value="@ApplicationCore.Enums.InvokedFrom.HomePage" />
                    <div class="row form-group">
                        <div class="col-md-12">
                            <input type="submit" id="submit-btn" value="Send Message" class="btn btn-primary py-2 px-4 text-white">
                        </div>
                    </div>

                </form>
            </div>
            <div class="col-md-5">

                <div class="p-4 mb-3 bg-white">
                    <p class="mb-0 font-weight-bold">Address</p>
                    <p class="mb-4">Jubilee House 3 The Drive, Great Warley, Brentwood, England, CM13 3FR</p>

                    <p class="mb-0 font-weight-bold">Phone</p>
                    <p class="mb-4">01277 725 010</p>

                    <p class="mb-0 font-weight-bold">Email Address</p>
                    <p class="mb-0">admin@valkar.co.uk</p>
                </div>

                <div class="p-4 mb-3 bg-white">
                    <p class="mb-0 font-weight-bold">Ad</p>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script src="@Url.Content("~/js/Views/Contact/ContactUs.js")" type="module"></script>
    <script src="https://www.google.com/recaptcha/enterprise.js?render=@_applicationCoreOptions.Value.GoogleCaptchaKeyId"></script>

    <script>
        $(document).ready(function () {
            ContactUs.onInit({
                googleCaptchaKeyId: '@_applicationCoreOptions.Value.GoogleCaptchaKeyId',
                invokedFrom: '@ApplicationCore.Enums.InvokedFrom.HomePage'
            });
        });
    </script>
}