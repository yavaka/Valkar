@model ApplicationCore.ServiceModels.WorkingDay.WorkingDayServiceModel

@{
    TempData["Title"] = "Add Working Day";
}

<div class="container" data-layout="container">
    <partial name="_NavbarPartial" />
    <div class="content" style="margin-top: 1%">
        <div class="row g-3 mb-3">
            <div class="col-lg-12">
                <div class="card mb-3 mb-lg-0">
                    <div class="card-header bg-light d-flex justify-content-between">
                        <h5 class="mb-0">Add Working Day</h5>
                    </div>
                    <form asp-action="AddWorkingDay" method="post">
                        <input type="hidden" asp-for="DriverId" />
                        <div class="card-body fs--1">
                            <div class="row g-2">
                                <div class="col-6">
                                    <div class="mb-3">
                                        <label class="form-label" asp-for="Date"></label>
                                        <input class="form-control" asp-for="Date" type="date" id="date" />
                                        <span asp-validation-for="Date" class="text-danger" style="font-size:smaller;"></span>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="mb-3">
                                        <label class="form-label" asp-for="TimeIn"></label>
                                        <input class="form-control" asp-for="TimeIn" type="time" id="time-in" placeholder="00:00:00" />
                                        <span asp-validation-for="TimeIn" class="text-danger" style="font-size:smaller;"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row g-2">
                                <div class="col-6">
                                    <div class="mb-3">
                                        <label class="form-label" asp-for="Break"></label>
                                        <input class="form-control" asp-for="Break" type="time" id="break" placeholder="00:00:00" />
                                        <span asp-validation-for="Break" class="text-danger" style="font-size:smaller;"></span>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="mb-3">
                                        <label class="form-label" asp-for="TimeOut"></label>
                                        <input class="form-control" asp-for="TimeOut" type="time" id="time-out" placeholder="00:00:00" />
                                        <span asp-validation-for="TimeOut" class="text-danger" style="font-size:smaller;"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row g-2">
                                <div class="col-6">
                                    <div class="mb-3" style="margin-top: 28px">
                                        <button class="btn btn-primary" type="submit" style="width:100%">Add</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
}
